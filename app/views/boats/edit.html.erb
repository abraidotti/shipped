<h1>Edit the boat</h1>

<form role="form" class="form-horizontal">
<div class="form-group">
<%= form_for @boat do |f| %>
<%= f.label "Name: " %>
<%= f.text_field :name %>



<%= f.label "Containers: " %>
<%= f.number_field :container_amount, in: 1..1000000, step: 1 %>


<%= f.label "Location: " %>
<%= f.select :location, $locations %>
<br>
<%= f.label "Image: " %>
<%= f.file_field :avatar %>
</div>

<%= f.submit %>
<% end %>
