<h1>Edit the boat</h1>

<!-- <form role="form" class="form-horizontal"> -->
<div class="form-group">
<%= form_with(model: @boat, role: 'form', ) do |f| %>
<%= f.label "Name: ", class: 'col-md-6 control-label' %>
<%= f.text_field :name %>

<%= f.label "Containers: ", class: 'col-md-6 col-lg-3 control-label' %>
<%= f.number_field :container_amount, in: 1..1000000, step: 1 %>

<%= f.label "Location: ", class: 'col-md-6 control-label' %>
<%= f.select :location, $locations %>

<%= f.label "Image: ", class: 'col-md-6 control-label' %>
<%= image_tag @boat.avatar.url(:medium) %>
<%= f.file_field :avatar %>
<br>
<br>
<%= f.submit %>
<% end %>
</div>
