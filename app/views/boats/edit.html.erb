<h1>Edit the boat</h1>

<!-- <form role="form" class="form-horizontal"> -->
<div class="form-group">
<%= form_with(model: @boat, role: 'form', class: 'form-horizontal') do |f| %>
<%= f.label "Name: ", class: 'col-md-2 control-label' %>
<%= f.text_field :name %>



<%= f.label "Containers: ", class: 'col-md-2 control-label' %>
<%= f.number_field :container_amount, in: 1..1000000, step: 1 %>


<%= f.label "Location: ", class: 'col-md-2 control-label' %>
<%= f.select :location, $locations %>

<%= f.label "Image: ", class: 'col-md-2 control-label' %>
<%= f.file_field :avatar %>
<br>
<br>
<%= f.submit %>
<% end %>
</div>
