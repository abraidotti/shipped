<h1>New boat</h1>

<%= form_for @boat do |f| %>
<%= f.label "Name: " %>
<%= f.text_field :name %>
<br>
<%= f.label "Containers: " %>
<%= f.number_field :container_amount, in: 1..1000, step: 1 %>
<br>
<%= f.label "Location: " %>
<%= f.select :location, $locations %>
<br>
<%= f.label "Image: " %>
<%= f.file_field :avatar %>
<br>
<%= f.submit %>
<% end %>
