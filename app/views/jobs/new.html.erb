<h1>New job</h1>

<%= form_for @job do |f| %>

<%= f.label "Name: " %>
<%= f.text_field :name %>
<br>
<%= f.label "Description: " %>
<%= f.text_field :description %>
<br>
<%= f.label "Origin: " %>
<%= f.select(:origin,$locations) %>
<br>
<%= f.label "Destination: " %>
<%= f.select(:destination,$locations) %>
<br>
<%= f.label "Cost: " %>
<%= f.number_field :cost, from: 1000.00, step: 0.01 %>
<br>
<%= f.label "Containers needed: " %>
<%= f.number_field :containers_needed, in: 1..1000000, step: 1 %>
<br>
<%= f.submit %>
<% end %>
